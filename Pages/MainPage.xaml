<Page x:Class="Animals.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Animals.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="MainPage">

    <Grid>
        <Image Source="/Images/background.jpg" Stretch="UniformToFill"/>

        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Width="685">
            <StackPanel>
                <TextBlock Text="Животный мир Волгоградской области"
                           FontSize="35"
                           FontWeight="Bold"
                           Foreground="Black"/>
            </StackPanel>

            <StackPanel Width="150"
                        Margin="15">
                <Button x:Name="BtnWatch"
                        Content="Смотреть"
                        Style="{StaticResource LoginButton}" Click="BtnWatch_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
